// Media Module
// ============================================================

.m-breadcrumb {
  flex: 1 0 auto;
  align-items: center;
  &__item {
    color: @link-color;
  }
  &__slash{
    margin-left: @vr-1;
    margin-right: @vr-1;
    color: lighten(@default-color, 20%);
  }
  &__current {
    color: @default-color;
  }
}
